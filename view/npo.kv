<Button>
    font_size: 32
    background_normal: ''
    color: 0, 0.75, 0, 1
    halign: "center"
    #background_color: (0,0.75,0,1)

<Label>
    font_size: 28

<GridLayout>
    spacing: 15
    canvas.before:
        Color:
            rgba: 0,0.75,0,1
        Rectangle:
            size: self.size
            pos: self.pos

<SpinnerOption>:
    font_size: 16
    text_size: self.width, None

<NpoWindow>:
    name: "first"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        GridLayout:
            cols: 4
            size_hint_x: None
            width: 620
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                background_color: (0, 0, 1, 1)
                text: "NPOs"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Categories"
                on_press:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Grants"
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction= "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Hello"

        GridLayout:
            cols: 3
            padding: 10

            Label:
                id: name_labels
                text: "Which NPO are you looking for?"
                text_size: self.width, None

            Spinner:
                id: NPO_dropdown
                text: "Select NPOs"
                values: root.dropdown()
                text_size: self.width, None

            Button:
                text: "Update NPO"
                text_size: self.width, None
                on_release:
                    app.root.current = root.press_npo()
                    root.manager.transition.direction= "left"

        GridLayout:
            cols: 2
            padding: 10
            Button:
                text: "Add NPO"
                on_release:
                    app.root.current = "create_npo"

            Button:
                text: "Remove NPO"
                on_press: root.press_all_npos()

<NpoUpdateWindow>:
    name: "update_npo"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        GridLayout:
            cols: 4
            size_hint_x: None
            width: 620
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                background_color: (0, 0, 1, 1)
                text: "Back"
                on_press:
                    app.root.current = "first"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Categories"
                on_press:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Grants"
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction= "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Hello"

        GridLayout:
            cols: 3
            padding: 10

            Label:
                id: name_labels
                text: ""
                text_size: self.width, None

            Label:
                text: "Yeah"

            Button:
                text: "Update NPO"
                text_size: self.width, None
                on_release:
                    app.root.current = self.npo_selected()
                    root.manager.transition.direction= "left"

        GridLayout:
            cols: 2
            padding: 4
            size_hint_x: None
            width: 620
            size_hint_y: None
            height: 50
            spacing: 10
            Label:
                id: "box_energy"
                text: "Hello"
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                on_active: root.press_all_npos()

<NpoCreateWindow>:
    name: "create_npo"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        GridLayout:
            cols: 4
            size_hint_x: None
            width: 620
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                background_color: (0, 0, 1, 1)
                text: "Back"
                on_press:
                    app.root.current = "first"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Categories"
                on_press:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Grants"
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction= "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Hello"

        GridLayout:
            cols: 3
            size_hint_x: None
            width: 1300
            size_hint_y: None
            height: 750
            spacing: 10
            padding: 10

            Label:
                id: name_labels
                text: "Write NPOs Name:"
                text_size: self.width, None
                font_size: 64

            TextInput:
                id: name_input
                multiline: False

            Button:
                text: "Create NPO"
                text_size: self.width, None
                font_size: 70
                color: 0, 0.5, 0, 1
                on_release:
                    app.root.current = root.add_npo()
                    root.manager.transition.direction= "left"

        Label:
            text: ""


<NpoCreatePop>:
    name: "npo_pop"
    npo_name: ""

    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            size: self.size
            pos: self.pos


    Label:
        id: name_label
        text: "You pressed the button"
        size_hint: 0.6, 0.2
        text_size: self.width, None
        pos_hint: {"x":0.2, "top":1}

    Button:
        id: button_name
        color: 0,0.5,0,1
        text: "Confirm"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_press: root.close_pop()
        on_release:
            if root.npo_name != "None": root.create(root.npo_name)

