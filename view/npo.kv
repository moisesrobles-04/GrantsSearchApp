        Label:
            text: ""

        GridLayout:
            cols: 2
            padding: 4
            size_hint_x: None
            width: 620
            size_hint_y: None
            height: 50
            spacing: 10

            Label:
                id: "box_energy"
                text: "Hello"
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                canvas.before:
                    Color:
                        rgba: 0,0,0,1
                    Rectangle:
                        size: self.size
                        pos: self.pos
                on_active: root.press_all_npos()

