<NpoDeleteWindow>:
    name: "delete_npo"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        GridLayout:
            cols: 4
            size_hint_x: None
            width: 620
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                background_color: (0, 0, 1, 1)
                text: "Back"
                on_press:
                    app.root.current = "first"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Categories"
                on_press:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
