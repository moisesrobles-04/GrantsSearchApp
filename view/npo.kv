<Button>
    font_size: 32
    background_normal: ''
    color: 0, 0.75, 0, 1
    halign: "center"
    #background_color: (0,0.75,0,1)

<Label>
    font_size: 28

<GridLayout>
    spacing: 15
    canvas.before:
        Color:
            rgba: 0,0.75,0,1
        Rectangle:
            size: self.size
            pos: self.pos

<SpinnerOption>:
    background_color: 0.2,0.2,0.2,1
    padding: 20
    font_size: 24
    color: (1,0.5,0,1)
    text_size: self.width, None

<NpoWindow>:
    name: "first"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        padding: 50
        spacing: 20

        GridLayout:
            cols: 4
            size_hint_x: None
            width: 620
            size_hint_y: None
            height: 50
            spacing: 10

            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                background_color: (0, 0, 1, 1)
                text: "NPOs"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Categories"
                on_press:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Grants"
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction= "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Hello"

        GridLayout:
            cols: 3
            padding: 10

            Label:
                id: name_labels
                text: "Which NPO are you looking for?"
                text_size: self.width, None

            Spinner:
                id: NPO_dropdown
                text: "Select NPOs"
                values: root.dropdown()
                text_size: self.width, None

            Button:
                text: "Update NPO"
                text_size: self.width, None
                on_release:
                    #app.root.current = root.press_npo()
                    root.press_npo()
                    root.manager.transition.direction= "left"

        GridLayout:
            cols: 2
            padding: 10
            Button:
                text: "Add NPO"
                on_release:
                    app.root.current = "create_npo"

            Button:
                text: "Remove NPO"
                on_release:
                    app.root.current = "delete_npo"

