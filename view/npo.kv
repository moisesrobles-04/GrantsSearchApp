            spacing: 10

            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                background_color: (0, 0, 1, 1)
                text: "Back"
                on_press:
                    app.root.current = "first"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Categories"
                on_press:
                    app.root.current = "second"
                    root.manager.transition.direction = "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Grants"
                on_release:
                    app.root.current = "third"
                    root.manager.transition.direction= "left"
            Button:
                size_hint: (0.2,0.2)
                font_size: 22
                text: "Hello"

        GridLayout:
            cols: 3
            padding: 10

            Label:
                id: name_labels
                text: ""
                text_size: self.width, None

            TextInput:
                id: input_label
                multiline: False
                text_size: self.width, None

            Button:
                text: "Update NPO"
                text_size: self.width, None
                on_release:
                    app.root.current = root.change_name()
