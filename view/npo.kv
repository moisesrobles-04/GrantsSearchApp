                text_size: self.width, None
                font_size: 64

            Spinner:
                id: NPO_dropdown
                text: "NPOs"
                values: root.manager.get_screen("first").ids.NPO_dropdown.values
                text_size: self.width, None

            Button:
                text: "Delete NPO"
                text_size: self.width, None
                font_size: 70
                color: 0, 0.5, 0, 1
                on_release:
                    if root.ids.NPO_dropdown!= "NPOs": app.root.current = root.remove_npo()
                    root.manager.transition.direction= "left"

        Label:
            text: ""

<NpoPop>:
    name: "npo_pop"
    npo_name: ""

    canvas.before:
        Color:
            rgba: 0,0,0,1
        Rectangle:
            size: self.size
            pos: self.pos

    Label:
        id: name_label
        text: "You pressed the button"
        size_hint: 0.6, 0.2
        text_size: self.width, None
        pos_hint: {"x":0.2, "top":1}

    GridLayout:
        cols: 2
        size_hint: None, None
        pos_hint: {"x":0, "y":0}
        width: 620
        height: 80
        spacing: 10
        padding: 5

        Button:
            id: confirm_button
            color: 0,0.5,0,1
            text: "Confirm"
            size_hint: 0.9, 0.2
            pos_hint: {"x":0.1, "y":0.1}
            on_release:
                if root.npo_name != "None": root.crud_action(root.npo_name)
                if root.npo_name != "None": app.root.current = "first"
                root.close_pop()

        Button:
            id: cancel_button
            background_color: (0.75,0,0,1)
            color: 1,1,1,1
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.3, "y":0.1}
            text: "Cancel"
            on_release:
                root.close_pop()